{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "module": "esnext",
    "target": "ES2015",
    "baseUrl": "src",
    "allowJs": true,
    "strict": true,
    "jsx": "react",
    "paths": {
      "@Components/*": ["components/*"],
      "@TestData/*": ["testData/*"],
      "@Context/*": ["context/*"],
      "@Assets/*": ["assets/*"],
      "@Views/*": ["views/*"],
      "@Utils/*": ["utils/*"]
    }
  }
}
